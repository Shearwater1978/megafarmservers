# Consul systemd service unit file
[Unit]
Description=Consul Service Discovery Agent
Documentation=https://www.consul.io/
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=consul
Group=consul
ExecStart=/usr/local/bin/consul agent \
        -join {{ consul_config.consul_join_ip }} \
	-client {{ hostvars[inventory_hostname].ansible_host }} \
        -advertise {{ hostvars[inventory_hostname].ansible_host }} \
        -log-file={{ consul_config.consul_log_dir }} \
        -data-dir={{ consul_config.consul_data_dir }} \
        -config-dir {{ consul_config.consul_config_dir }}

ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
TimeoutStopSec=5
Restart=on-failure
SyslogIdentifier=consul

[Install]
WantedBy=multi-user.target
